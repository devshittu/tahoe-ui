{
  "name": "@tahoe-ui/code",
  "version": "0.0.1",
  "description": "Code display and editing components for Tahoe UI - syntax highlighting, component registry, interactive studio",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./preview": {
      "import": {
        "types": "./dist/preview/index.d.mts",
        "default": "./dist/preview/index.mjs"
      },
      "require": {
        "types": "./dist/preview/index.d.ts",
        "default": "./dist/preview/index.js"
      }
    },
    "./blocks": {
      "import": {
        "types": "./dist/blocks/index.d.mts",
        "default": "./dist/blocks/index.mjs"
      },
      "require": {
        "types": "./dist/blocks/index.d.ts",
        "default": "./dist/blocks/index.js"
      }
    },
    "./studio": {
      "import": {
        "types": "./dist/studio/index.d.mts",
        "default": "./dist/studio/index.mjs"
      },
      "require": {
        "types": "./dist/studio/index.d.ts",
        "default": "./dist/studio/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "types:check": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@tahoe-ui/core": "workspace:*"
  },
  "devDependencies": {
    "@tahoe-ui/eslint-config": "workspace:*",
    "@tahoe-ui/tsconfig": "workspace:*",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "framer-motion": ">=11.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "shiki": ">=1.0.0",
    "tailwind-merge": ">=2.0.0"
  },
  "peerDependenciesMeta": {
    "shiki": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devshittu/tahoe-ui.git",
    "directory": "packages/code"
  },
  "keywords": [
    "react",
    "component",
    "code",
    "syntax-highlighting",
    "shiki",
    "preview",
    "studio"
  ],
  "license": "MIT"
}
