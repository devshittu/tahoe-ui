{
  "name": "@tahoe-ui/wizard",
  "version": "0.0.1",
  "description": "Multi-step wizard component with event bus validation for Tahoe UI",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "types:check": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "framer-motion": "^11.18.0",
    "mitt": "^3.0.1",
    "tailwind-merge": "^3.0.2",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@tahoe-ui/tsconfig": "workspace:*",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devshittu/tahoe-ui.git",
    "directory": "packages/wizard"
  },
  "keywords": [
    "react",
    "wizard",
    "multi-step",
    "form",
    "stepper",
    "ui",
    "components"
  ],
  "author": "devshittu",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
