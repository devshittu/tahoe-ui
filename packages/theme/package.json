{
  "name": "@tahoe-ui/theme",
  "version": "0.0.1",
  "description": "CSS variable-based theming system for Tahoe UI",
  "type": "module",
  "license": "MIT",
  "author": "Muhammed Shittu <mshittu.work@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/devshittu/tahoe-ui",
    "directory": "packages/theme"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./themes": {
      "import": {
        "types": "./dist/themes/index.d.ts",
        "default": "./dist/themes/index.js"
      },
      "require": {
        "types": "./dist/themes/index.d.cts",
        "default": "./dist/themes/index.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils/index.d.ts",
        "default": "./dist/utils/index.js"
      },
      "require": {
        "types": "./dist/utils/index.d.cts",
        "default": "./dist/utils/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "types:check": "tsc --noEmit",
    "lint": "eslint src/"
  },
  "dependencies": {
    "@tahoe-ui/core": "workspace:*"
  },
  "peerDependencies": {
    "next-themes": ">=0.3.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "next-themes": "^0.4.4",
    "react": "^19.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  }
}
