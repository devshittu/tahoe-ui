{
  "name": "@tahoe-ui/core",
  "version": "0.0.0",
  "description": "Core design tokens, utilities, and types for Tahoe UI",
  "license": "MIT",
  "author": "Muhammed Shittu <mshittu.work@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/devshittu/tahoe-ui",
    "directory": "packages/core"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./tokens": {
      "import": {
        "types": "./dist/tokens/index.d.ts",
        "default": "./dist/tokens/index.js"
      },
      "require": {
        "types": "./dist/tokens/index.d.cts",
        "default": "./dist/tokens/index.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/utils/index.d.ts",
        "default": "./dist/utils/index.js"
      },
      "require": {
        "types": "./dist/utils/index.d.cts",
        "default": "./dist/utils/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@tahoe-ui/tsconfig": "workspace:*",
    "@tahoe-ui/eslint-config": "workspace:*",
    "tsup": "^8.3.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "mitt": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "mitt": {
      "optional": true
    }
  },
  "keywords": [
    "design-tokens",
    "design-system",
    "tahoe-ui",
    "utilities"
  ]
}
